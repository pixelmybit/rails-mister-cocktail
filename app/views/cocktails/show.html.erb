<div class="container">
<div class="dose-bg">
  <h1><%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |d| %>
  <%= d.ingredient.name %>

  <%= d.description %>
  <%= link_to dose_path(d),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
       <i class="fas fa-trash"></i>
        <% end %>
  <br>
  <% end %>
</div>
<%= link_to "View all | ", root_path %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</div>



